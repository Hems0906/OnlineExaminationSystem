
@model mvcfinal.Models.InstitutionViewModel
@{
    ViewBag.Title = "Add Institution";
}

<h2>Add New Institution</h2>

@using (Html.BeginForm("AddInstitution", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Add Institution</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
}
