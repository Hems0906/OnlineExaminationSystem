@model List<mvcfinal.Models.SubjectViewModel>
@{
    ViewBag.Title = "Student Dashboard";
}

<h2>Available Subjects</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No subjects available currently. Please check later.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Subject</th>
                <th>Level 1</th>
                <th>Level 2</th>
                <th>Level 3</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in Model)
            {
                <tr>
                    <td>@sub.Id</td>
                    <td>@sub.Name</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("StartExam","Student", new { subjectId=sub.Id, level=1 })">Start</a>
                    </td>
                    <td>
                        <a class="btn btn-secondary btn-sm" href="@Url.Action("StartExam","Student", new { subjectId=sub.Id, level=2 })">Start</a>
                    </td>
                    <td>
                        <a class="btn btn-secondary btn-sm" href="@Url.Action("StartExam","Student", new { subjectId=sub.Id, level=3 })">Start</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
