@model MVC_OES.Models.Courses.AddCourseModel
@{
    ViewBag.Title = "Edit Course";
}

<h2>Edit Course</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@using (Html.BeginForm("EditCourse", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m => m.CourseId)

    <div class="form-group">
        @Html.LabelFor(m => m.CourseName)
        @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CourseName)
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="@Url.Action("Courses", "Admin")" class="btn btn-secondary">Cancel</a>
}
