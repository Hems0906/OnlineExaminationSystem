@model MVC_OES.Models.Levels.LevelViewModel
@{
    ViewBag.Title = "Edit Level";
}

<h2>Edit Level - @Model.LevelName</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.CourseId)
    @Html.HiddenFor(m => m.LevelNumber)

    <div class="form-group">
        @Html.LabelFor(m => m.LevelName)
        @Html.TextBoxFor(m => m.LevelName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Duration)
        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PassingMarks)
        @Html.TextBoxFor(m => m.PassingMarks, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TotalQuestions)
        @Html.TextBoxFor(m => m.TotalQuestions, new { @class = "form-control", type = "number" })
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="@Url.Action("Levels", "Admin", new { courseId = Model.CourseId })" class="btn btn-secondary">Cancel</a>
}


