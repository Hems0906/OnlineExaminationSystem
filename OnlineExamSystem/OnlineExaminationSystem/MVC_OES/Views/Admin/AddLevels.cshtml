@model List<MVC_OES.Models.Levels.LevelViewModel>
@{ ViewBag.Title = "Add Levels"; }

<h2>Add Levels</h2>

<form method="post" action="@Url.Action("AddLevels", "Admin", new { courseId = ViewBag.CourseId })">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mb-3 p-3">
            <h4>Level @Model[i].LevelNumber</h4>
            <input type="hidden" name="[@i].LevelNumber" value="@Model[i].LevelNumber" />
            <div class="form-group">
                <label>Level Name</label>
                <input type="text" name="[@i].LevelName" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Duration (mins)</label>
                <input type="number" name="[@i].Duration" class="form-control" value="5" required />
            </div>
            <div class="form-group">
                <label>Passing Marks</label>
                <input type="number" name="[@i].PassingMarks" class="form-control" value="20" required />
            </div>
            <div class="form-group">
                <label>Total Questions</label>
                <input type="number" name="[@i].TotalQuestions" class="form-control" required />
            </div>
        </div>
    }
    <button type="submit" class="btn btn-success">Save All Levels</button>
</form>
