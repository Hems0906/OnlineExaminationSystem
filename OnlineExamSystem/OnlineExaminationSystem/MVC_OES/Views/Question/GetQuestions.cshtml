@model List<MVC_OES.Models.Questions.QuestionModel>

@{
    ViewBag.Title = "Manage Questions";
    int courseId = ViewBag.CourseId;
    int levelNumber = ViewBag.LevelNumber;
}

<h2 class="mb-3">Manage Questions — Course @courseId | Level @levelNumber</h2>

@if (TempData["ApiError"] != null)
{
    <div class="alert alert-danger">@TempData["ApiError"]</div>
}

<div class="mb-3">
    <a href="@Url.Action("UploadQuestions", "Question", new { courseId = courseId, levelNumber = levelNumber })" class="btn btn-success">Upload Questions</a>
    <a href="@Url.Action("AddQuestion", "Question", new { courseId = courseId, levelNumber = levelNumber })" class="btn btn-primary">Add Manually</a>
</div>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Question Text</th>
                <th>Option A</th>
                <th>Option B</th>
                <th>Option C</th>
                <th>Option D</th>
                <th>Answer</th>
                <th>Marks</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var q in Model)
            {
                <tr>
                    <td>@q.QuestionText</td>
                    <td>@q.OptionA</td>
                    <td>@q.OptionB</td>
                    <td>@q.OptionC</td>
                    <td>@q.OptionD</td>
                    <td>@q.Answer</td>
                    <td>@q.Marks</td>
                    <td>
                        <input type="checkbox" class="toggle-question-status" data-id="@q.QuestionId" @(q.Status ? "checked" : "") />
                    </td>
                    <td>
                        <a href="@Url.Action("EditQuestion", "Question", new {questionId = q.QuestionId,  courseId = q.CourseId,  levelNumber = q.LevelNumber })" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No questions found for this level.</div>
}

<a href="@Url.Action("Levels", "Admin", new { courseId = @courseId})" class="btn btn-warning btn-sm">Back to Levels</a>


@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.toggle-question-status').change(function () {
                var questionId = $(this).data('id');
                var checkbox = $(this);

                $.ajax({
                    url: '@Url.Action("ToggleStatus", "Question")/' + questionId,
                    type: 'POST',
                    success: function (res) {
                        if (res.success) {
                            alert(res.message);
                        } else {
                            alert(res.message);
                            checkbox.prop('checked', !checkbox.prop('checked'));
                        }
                    },
                    error: function () {
                        alert('Error toggling question status.');
                        checkbox.prop('checked', !checkbox.prop('checked'));
                    }
                });
            });
        });
    </script>
}
